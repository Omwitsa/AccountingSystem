@page "/"
@model LoginModel

<div class="card  card-primary">
	<div class="card-body">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<section>
					<form id="account" method="post">
						<hr />
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Input.Email"></label>
							<input asp-for="Input.Email" class="form-control form-control-lg" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.Password"></label>
							<input asp-for="Input.Password" class="form-control form-control-lg" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<div class="checkbox">
								<label asp-for="Input.RememberMe">
									<input asp-for="Input.RememberMe" />
									@Html.DisplayNameFor(m => m.Input.RememberMe)
								</label>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-block btn-lg btn-primary waves-effect">Log in</button>
						</div>
						<div class="form-group row">
							<div class="col-md-6 text-left">
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account?</a>
							</div>
							<div class="col-md-6 text-right">
								<a id="forgot-password" asp-page="./ForgotPassword">Reset Password</a>
							</div>
						</div>
					</form>
				</section>
			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
