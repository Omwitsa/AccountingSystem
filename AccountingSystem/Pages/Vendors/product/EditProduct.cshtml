                                            <input id="Gender" name="Gender" value="Company" type="radio">
                                            Delivered quantities
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="" style="color:blue">
                                <b>Sales Description</b>
                            </label>

                            <div class="row">
                                <textarea class="span6" name="internalnote" cols="100" style="width:800px;" rows="2" placeholder="add notes.." required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>*@
            <div class=collapse col-sm-12" id="collapsePurchase" data-parent="#myGroup">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="" style="color:blue"><b>Vendor Bills</b></label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Vendor Taxes</label>
                                </div>

                                <div class="col-sm-6">
                                    <select class="form-control" asp-for="Product.VenderTax">
                                        <option selected>Select tax Acc</option>
                                        @foreach (var tax in Model.Taxes)
                                        {
                                            <option value="@tax.Name"> @tax.Name</option>
                                        }
                                    </select>
                                    @*<input type="text" name="Income" class="form-control" id="Income" placeholder="" style="height:30px;" autocomplete="off" />*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class=collapse col-sm-12" id="collapseAccounting" data-parent="#myGroup">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="" style="color:blue"><b>Receivables</b></label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Income Account</label>
                                </div>

                                <div class="col-sm-6">
                                    <select class="form-control" asp-for="Product.APGlAccount">
                                        <option selected>Select Income Acc</option>
                                        @foreach (var account in Model.Accounts)
                                        {
                                            <option value="@account.Code">@account.Code @account.Name</option>
                                        }
                                    </select>
                                    @*<input type="text" name="Income" class="form-control" id="Income" placeholder="" style="height:30px;" autocomplete="off" />*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="" style="color:blue"><b>Payables</b></label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Expense Account</label>
                                </div>
                                <div class="col-sm-6">
                                    <select class="form-control" asp-for="Product.ARGlAccount">
                                        <option selected>Select expense acc</option>
                                        @foreach (var account in Model.Accounts)
                                        {
                                    <option value="@account.Code">@account.Code @account.Name</option>
                                        }
                                    </select>
                                    @*<select class="form-control"></select>*@
                                    @*<input type="text" name="Expense" class="form-control" id="Income" placeholder="" style="height:30px;" autocomplete="off" />*@
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
            <button type="submit" id="register" class="btn btn-success">SAVE</button>
            @*<button type="button" class="btn btn-danger" data-dismiss="modal" asp-page="ListVendors.cshtml">>DISCARD</button>*@
            <a class="btn btn-secondary" asp-page="./ListProduct">BACK</a>
        </div>

        </div>
</form>



