@page
@model AccountingSystem.Pages.Vendors.EditProductModel
@{

}

<form method="post" class="m-5">
    <div class="modal-content hold-transition login-page">
         <div class="modal-body m-3">
            <div class="row">
                <div class="form-group mt-1">
                    <label for="" style="color:green"><b>Product Name</b></label>
                </div>
            </div>
            <div class="row col-sm-8">
                    <div class="row">
                        <input type="text" asp-for="Product.Name" class="form-control" placeholder="Product Name" />
                    </div><hr>
            </div>
            
            <nav class="navbar navbar-invers">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <div class="row">
                        <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseGeneral" aria-expanded="false" aria-controls="collapseExample" type="button">General Information</li>
                        <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseAccounting" aria-expanded="false" aria-controls="collapseExample" type="button">Accounting</li>
                </div>
                </ul>
        </div>
        </nav>
        <div id="myGroup">
            <div class=collapse col-sm-12" id="collapseGeneral" data-parent="#myGroup">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="row">
                                <label for="" style="color:green">Product Type</label>
                            </div><br>
                            <div class="row">
                                <label for="" style="color:green">Product Category</label>
                            </div><br>
                            <div class="row">
                                <label for="" style="color:green">Product Reference</label>
                            </div><br>
                            <div class="row">
                                <label for="" style="color:green">Barcode</label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="row">
                                <select class="form-control" asp-for="Product.Type">
                                    <option selected>Select type</option>
                                    @foreach (var type in Model.ProductTypes)
                                    {
                                        <option value="@type"> @type</option>
                                    }
                                </select>
                            </div><br>
                            <div class="row">
                                <select class="form-control" asp-for="Product.Category">
                                    <option selected>Select Category</option>
                                    @foreach (var category in Model.ProductCategories)
                                    {
                                        <option value="@category.Name"> @category.Name</option>
                                    }
                                </select>
                            </div><br>
                            <div class="row">
                                <input type="text" asp-for="Product.Ref" class="form-control" placeholder="" />
                            </div><br>
                            <div class="row">
                                <input type="text" asp-for="Product.BarCode" class="form-control" placeholder="" />
                            </div><br>
                        </div>
                        <div class="col-sm-2 m-1">
                            <div class="row">
                                <label for="" style="color:green">Sales Price</label>
                            </div><br>
                            <div class="row">
                                <label for="" style="color:green">Customer Taxes</label>
                            </div><br>
                            <div class="row">
                                <label for="" style="color:green">Cost</label>
                            </div><br>
                        </div>
                        <div class="col-sm-3">
                            <div class="row">
                                <input type="text" asp-for="Product.Price" class="form-control" placeholder="" />
                            </div><br>
                                  <div class="row">
                                      <select class="form-control" asp-for="Product.VenderTax">
                                          <option selected>Select tax</option>
                                          @foreach (var tax in Model.Taxes)
                                          {
                                              <option value="@tax.Name"> @tax.Name</option>
                                          }
                                      </select>
                                  </div><br>
                            <div class="row">
                                <input type="text" asp-for="Product.Cost" class="form-control" placeholder="" />
                            </div><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="" style="color:blue">
                                <b>Internal Notes</b>
                            </label>

                            <div class="row">
                                <textarea class="span6" asp-for="Product.Notes" cols="100" style="width:800px;" rows="2" placeholder="add notes.." ></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class=collapse col-sm-12" id="collapseAccounting" data-parent="#myGroup">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <label for="" style="color:blue"><b>Receivables</b></label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Income Account</label>
                                </div>

                                <div class="col-sm-6">
                                    <select class="form-control" asp-for="Product.APGlAccount">
                                        <option selected>Select Income Acc</option>
                                        @foreach (var account in Model.Accounts)
                                        {
                                            <option value="@account.Code">@account.Code @account.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="" style="color:blue"><b>Payables</b></label>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Expense Account</label>
                                </div>
                                <div class="col-sm-6">
                                    <select class="form-control" asp-for="Product.ARGlAccount">
                                        <option selected>Select expense acc</option>
                                        @foreach (var account in Model.Accounts)
                                        {
                                    <option value="@account.Code">@account.Code @account.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
            <button type="submit" id="register" class="btn btn-success">SAVE</button>
            <a class="btn btn-secondary" asp-page="./ListProduct">BACK</a>
        </div>

        </div>
</form>



