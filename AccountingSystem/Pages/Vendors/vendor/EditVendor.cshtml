@page
@model AccountingSystem.Pages.Vendors.EditVendorModel
@{
}
<form method="post">
    <div class="modal-content hold-transition login-page">
        <div class="modal-header" ;color:white;text-align:center">
            <h5 class="modal-title w-100 text-center">Vendors Registration Form</h5>
        </div>
        <div class="modal-body">
            @if (!Model.Success)
            {
                <div class="alert-danger text-center">
                    @Model.Message
                </div>
            }

            <div class="col-sm-4">
                <div class="form-group">
                    <input type="text" asp-for="Vender.Name" class="form-control" placeholder="Name" style="height:30px;" autocomplete="off" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <div class="form-group">
                        <label for="">Adress</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row" style="border-radius:5px;border:1px solid #DDDDDD;padding:5px;">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.Street1" class="form-control" placeholder="Street..." style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.Street2" class="form-control" placeholder="Street2..." style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="col-sm-12">
                                <div class="row" style="border-radius:5px;border:1px solid #DDDDDD;padding:5px;">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input type="text" asp-for="Vender.City" class="form-control" placeholder="City..." style="height:30px;" autocomplete="off" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.Country" class="form-control" placeholder="Country" style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label for="">Phone</label>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label for="">Mobile</label>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label for="">Email</label>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label for="">Website Link</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row" style="border-radius:5px;border:1px solid #DDDDDD;padding:5px;">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.PhoneNo" class="form-control" placeholder="Phone" style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.Mobile" class="form-control" placeholder="Mobile" style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.Email" class="form-control" placeholder="Email" style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="text" asp-for="Vender.WebSite" class="form-control" placeholder="Website" style="height:30px;" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
            <nav class="navbar navbar-invers">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                       <div class="row">
                       <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseSales" aria-expanded="false" aria-controls="collapseExample" type="button" placeholder="Sales & Purchase" value="Sales & Purchase">Sales & Purchase</li>
                       <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseAccounting" aria-expanded="false" aria-controls="collapseExample" type="button" placeholder="Accounting" value="Accounting">Accounting</li>
                       <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseInternal" aria-expanded="false" aria-controls="collapseExample" type="button" placeholder="Internal Notes" value="Internal Notes">Internal Notes</li>
                    </div>
                </ul>
                </div>
            </nav>
        <div id="myGroup">
            <div class="collapse col-sm-12" id="collapseSales" data-parent="#myGroup">
                    <div class="card card-body">
                        <div class="row">
                                <div class="col-sm-6">
                                    <label for="">Sales</label>
                                    <div class="row">
                                            <div class="col-sm-4">
                                                <label for="">Payment Terms</label>
                                            </div>
                                            <div class="col-sm-8">
                                                <div class="row">
                                                </div>
                                                <div class="row">
                                                    <select class="form-control" asp-for="Vender.PurchasePaymentTerms">
                                                        <option selected>Select payment terms</option>
                                                        @foreach (var term in Model.PaymentTerms)
                                                        {
                                                            <option value="@term.Term">@term.Term</option>
                                                        }
                                                    </select>
                                                </div><br>
                                            </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <label for="">Purchase</label>
                                    <div class="row">
                                            <div class="col-sm-6">
                                                <label for="">Payment Terms</label>
                                            </div><br>
                                            <div class="col-sm-6">
                                                <select class="form-control" asp-for="Vender.PurchasePaymentTerms">
                                                    <option selected>Select payment terms</option>
                                                    @foreach (var term in Model.PaymentTerms)
                                                    {
                                                        <option value="@term.Term">@term.Term</option>
                                                    }
                                                </select>
                                            </div><br>
                                    </div>
                                    
                                </div>
                        </div>
                        <div class="card card-body">
                                <div class="row">
                                        <div class="col-sm-6">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="">Misc</label>
                                            <div class="row">
                                                    <div class="col-sm-6">
                                                            <div class="row">
                                                                <label for="">Reference</label>
                                                            </div><br>
                                                            <div class="row">
                                                                <label for="">Industry</label>
                                                            </div><br>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <div class="row">
                                                            <input type="text" asp-for="Vender.FiscalPosition" class="form-control" placeholder="" style="height:30px;" autocomplete="off" />
                                                        </div><br>
                                                        <div class="row">
                                                            <input type="text" asp-for="Vender.Industry" class="form-control" placeholder="" style="height:30px;" autocomplete="off" />
                                                        </div><br>
                                                    </div>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                </div>
        
                <div class="collapse col-sm-12" id="collapseAccounting" data-parent="#myGroup">
                    <div class="card card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <label for="">Bank Accounts</label>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="row">
                                            <label for="">Bank</label>
                                        </div><br>
                                        <div class="row">
                                            <label for="">Account No</label>
                                        </div>
                                     </div>
                                    <div class="col-sm-8">
                                        <select class="form-control" asp-for="Vender.Bank">
                                            <option selected>Select Bank</option>
                                            @foreach (var bank in Model.Banks)
                                            {
                                                <option value="@bank.Name">@bank.Name</option>
                                            }
                                        </select><br>
                                        <input type="text" asp-for="Vender.BankAccount" class="form-control" placeholder="" style="height:30px;" autocomplete="off" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="">Accounting Entries</label>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <label for="">Account Payable</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row">
                                            <select class="form-control" asp-for="Vender.APGlAccount">
                                                <option selected>Select Payable</option>
                                                @foreach (var account in Model.APccounts)
                                                {
                                                    <option value="@account.Name">@account.Code @account.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="collapse col-sm-12" id="collapseInternal" data-parent="#myGroup">
                    <div class="form-group">
                        <h1>
                            <textarea class="span6 form-control" asp-for="Vender.Notes" placeholder="Internal note...." style="height:30px;" autocomplete="off"></textarea>
                        </h1>
                        <b class="hr"></b>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
                <button type="submit" id="register" class="btn btn-success">SAVE</button>
                <a class="btn btn-secondary" asp-page="./ListVendors">BACK</a>
            </div>
        </div>
    </div>
</form>
   