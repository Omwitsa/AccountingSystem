@page
@model AccountingSystem.Pages.Vendors.ListVendorsModel
@{
    var count = 0;
}
<div>
    <div class="modal-header" style="background-color:white;color:white;text-align:center">
        <a class="nav-link text-dark" asp-page="./EditVendor">CREATE</a>
    </div>
    <div class="table-responsive">
        @if (!Model.Success)
        {
            <div class="alert-danger text-center">
                @Model.Message
            </div>
        }
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col">Email</th>
                    <th scope="col">PhoneNo</th>
                    <th scope="col">Industry</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vender in Model.Venders)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@vender.Name</td>
                        <td>@vender.City</td>
                        <td>@vender.Country</td>
                        <td>@vender.Email</td>
                        <td>@vender.PhoneNo</td>
                        <td>@vender.Industry</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
