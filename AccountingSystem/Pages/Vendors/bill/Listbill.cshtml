@page
@model AccountingSystem.Pages.Vendors.ListbillModel
@{
    var count = 0;
}
<div>
    <div class="row color m-1" style="color:green">Bills</div>
    <div class="modal-header" style="background-color:white;color:white;text-align:center">
        <div class="row">
            <a class="btn btn-info" asp-page="./Editbill">CREATE</a>
            <a class="btn btn-info" asp-page="./EditRefunds">UPLOAD</a>
            
        </div>
    </div>
    <div class="table-responsive">
        @if (!Model.Success)
        {
            <div class="alert-danger text-center">
                @Model.Message
            </div>
        }
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Vendor</th>
                    <th scope="col">Bill Date</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Reference</th>
                    <th scope="col">Next Activity</th>
                    <th scope="col">Tax Excluded</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model.Bills)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@bill.Vender</td>
                <td>@bill.Date</td>
                <td>@bill.DueDate</td>
                <td>@bill.Ref</td>
                <td>@bill.IncoTerm</td>
        <td class="text-right">
            <div class="dropdown">
                <a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                    <form asp-page-handler="edit" method="post">
                        <button class="btn btn-default">Edit</button>
                        <input type="hidden" name="id" value="@bill.Id" />
                    </form>
                </div>
            </div>
        </td>
            </tr>
        }
            </tbody>
        </table>
    </div>
</div>