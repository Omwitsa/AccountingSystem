                        </div>
                        <div class="row">
                            <div class="form-control">
                                Fiscal Position
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-control">
                                Post Automatically
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-control">
                                To Check
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="row">
                            <select class="form-control"></select>
                        </div>
                        <div class="row">
                            <select class="form-control"></select>
                        </div>
                        <div class="row">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="Post">
                            </label>
                        </div>
                        <div class="row">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="ToCheck">
                            </label>
