@model AccountingSystem.Pages.Vendors.bill.EditbillsModel
@{

    <style type="text/css">
        .h-divider {
            margin-top: 5px;
            margin-bottom: 5px;
            height: 1px;
            width: 100%;
            border-top: 1px solid gray;
        }
    </style>
}
<div class="modal-content hold-transition login-page" style="border-radius:5px;border:1px solid #DDDDDD;padding:5px; max-width: 100%;" role="document">
    <div class="row m-1">Bills/New</div>
    <div class="row m-1">
        <button type="submit" name="register" class="btn btn-success">SAVE</button>
        <a class="btn btn-danger" asp-page="./Listbill">DISCARD</a>
    </div>
    <div class="row m-1">
        <div class="h-divider"></div>
    </div>
    <div class="row m-1">
        <button type="button" class="btn btn-danger" data-dismiss="modal">CONFIRM</button>
        @*<button type="button" class="btn btn-danger" data-dismiss="modal">DISCARD</button>*@
    </div>
</div>
<div class="row" style="height:10px;">

</div>
<div class="modal-content hold-transition login-page" style="border-radius:5px;border:1px solid #DDDDDD;padding:5px; max-width: 100%;" role="document">
