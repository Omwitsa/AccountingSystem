                    <label for="" style="color:green"><b>Vendor Bill</b></label>
                </div>
            </div>
            <div class="row">
                <div class="row col-sm-8">
                    <div class="card card-body">
                        <div class="row">
                            <input type="text" name="Refund" class="form-control" placeholder="Bill No" style="height:30px;" autocomplete="off" />
                        </div>
                        <div class="row">
                            <div class="h-divider"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="row m-0">
                        <label for="" style="color:green">Vendor</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Bill Reference</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Payment Reference</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Recipient Bank</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Auto-Complete</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                    <div class="row">
                        <input type="text" name="Vendor" class="form-control" placeholder="Vendor..." style="height:30px;" autocomplete="off" />
                    </div>
                    <div class="row">
                        <input type="text" name="Bill" class="form-control" placeholder="Bill Re..." style="height:30px;" autocomplete="off" />
                    </div>
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="row m-0">
                        <label for="" style="color:green">Bill Date</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Accounting Date</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Due Date</label>
                    </div>
                    <div class="row m-0">
                        <label for="" style="color:green">Journal</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                    <div class="row m-0">
                        <div class="col-sm-4">
                            <select class="form-control"></select>
                        </div>Or
                        <div class="col-sm-4">
                            <select class="form-control"></select>
                        </div>
                    </div>
                    <div class="row">
                        <select class="form-control"></select>
                    </div>
                </div>
            </div>
            <nav class="navbar navbar-invers">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <div class="row">
                        <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseInvoice" aria-expanded="false" aria-controls="collapseExample" type="button">Invoice Lines</li>
                        <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseJournal" aria-expanded="false" aria-controls="collapseExample" type="button">Journal Items</li>
                        <li class="btn btn-primary" data-toggle="collapse" data-target="#collapseOther" aria-expanded="false" aria-controls="collapseExample" type="button">Other Info</li>
                </div>
                </ul>
        </div>
        </nav>
        <div class=collapse col-sm-12" id="collapseInvoice">
            <div class="card card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <b>Product</b>
                    </div>
                    <div class="col-sm-2">
