            <div class="card card-body">
                <div class="row">
                    <div class="col-sm-3">
                        Account
                    </div>
                    <div class="col-sm-2">
                        Label
                    </div>
                    <div class="col-sm-2">
                        Debit
                    </div>
                    <div class="col-sm-2">
                        Credit
                    </div>
                    <div class="col-sm-3">
