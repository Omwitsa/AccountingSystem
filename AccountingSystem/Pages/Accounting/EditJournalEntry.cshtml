@page
@model AccountingSystem.Pages.Accounting.EditJournalEntryModel
@{
}
<form method="post">
	<div class="modal-content hold-transition login-page">
		<div class="modal-header" ;color:white;text-align:center">
			<h5 class="modal-title w-100 text-center">Bank</h5>
		</div>
		<div class="modal-body">
			@if (!Model.Success)
			{
				<div class="alert-danger text-center">
					@Model.Message
				</div>
			}
			<div class="row">
				<div class="col-sm-4">
					Reference No.
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<input type="text" asp-for="JournalEntry.Ref" class="form-control" placeholder="Ref" />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					Journal
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<select class="form-control" asp-for="JournalEntry.Journal">
							<option selected>Select Journal</option>
							@foreach (var journal in Model.Journals)
							{
								<option value="@journal.Name">@journal.Name</option>
							}
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
			<button type="submit" class="btn btn-success">SAVE</button>
			<a class="btn btn-secondary" asp-page="./ListJournalEntries">BACK</a>
		</div>
	</div>
</form>
