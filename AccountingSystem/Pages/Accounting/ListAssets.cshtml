@page
@model AccountingSystem.Pages.Accounting.ListAssetsModel
@{
	var count = 0;
}
<div>
	<div class="modal-header" style="background-color:white;color:white;text-align:center">
		<a class="nav-link text-dark" asp-page="./EditAsset">CREATE</a>
	</div>
	<div class="table-responsive">
		@if (!Model.Success)
		{
			<div class="alert-danger text-center">
				@Model.Message
			</div>
		}
		<table class="table table-sm table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Original Value</th>
					<th scope="col">Acquisition Date</th>
					<th scope="col">Not Depreciation Value</th>
					<th scope="col">Depreciation Value</th>
					<th scope="col">Book Value</th>
					<th scope="col">Depreciation Method</th>
					<th scope="col">Start Depreciation</th>
					<th scope="col">Asset GL Account</th>
					<th scope="col">Expense GL Account</th>
					<th scope="col">Journal</th>
					<th scope="col">Personnel</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var asset in Model.Assets)
				{
					count++;
				<tr>
					<th scope="row">@count</th>
					<td>@asset.Name</td>
					<td>@asset.OriginalValue</td>
					<td>@asset.AcquisitionDate</td>
					<td>@asset.NotDepreciationValue</td>
					<td>@asset.DepreciationValue</td>
					<td>@asset.BookValue</td>
					<td>@asset.DepreciationMethod</td>
					<td>@asset.StartDepreciation</td>
					<td>@asset.AssetGlAccount</td>
					<td>@asset.ExpenseGlAccount</td>
					<td>@asset.Journal</td>
					<td>@asset.Personnel</td>
					<td class="text-right">
						<div class="dropdown">
							<a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fas fa-ellipsis-v"></i>
							</a>
							<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
								<form asp-page-handler="edit" method="post">
									<button class="btn btn-default">Edit</button>
									<input type="hidden" name="id" value="@asset.Id" />
								</form>
							</div>
						</div>
					</td>
				</tr>
				}
			</tbody>
		</table>
	</div>
</div>
