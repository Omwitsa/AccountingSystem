@page
@model AccountingSystem.Pages.Reporting.ProductsReportModel
@{
    var count = 0;
}
<div>
    <div class="modal-header" style="background-color:white;color:white;text-align:center">
        <button class="fas fa-file-download" >EXPORT TO PDF</button>
    </div>

    <div class="table-responsive">
        @if (!Model.Success)
        {
            <div class="alert-danger text-center">
                @Model.Message
            </div>
        }
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Internal Reference</th>
                    <th scope="col">Name</th>
                    <th scope="col">Public Price</th>
                    <th scope="col">Customer Taxes</th>
                    <th scope="col">Vendor Taxes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@product.Ref</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.CustomerTax</td>
                        <td>@product.VenderTax</td>
                        <td class="text-right">
                            @*<div class="dropdown">
                                <a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                    <form asp-page-handler="edit" method="post">
                                        <button class="btn btn-default">Edit</button>
                                        <input type="hidden" name="id" value="@product.Id" />
                                    </form>
                                    <form asp-page-handler="delete" method="post">
                                        <button class="btn btn-default">Delete</button>
                                        <input type="hidden" name="id" value="@product.Id" />
                                    </form>
                                </div>
                            </div>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
