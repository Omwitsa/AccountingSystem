@page
@model AccountingSystem.Pages.Configuration.EditBankModel
@{
}

<form method="post">
	<div class="modal-content hold-transition login-page">
		<div class="modal-header" ;color:white;text-align:center">
			<h5 class="modal-title w-100 text-center">Bank</h5>
		</div>
		<div class="modal-body">
			@if (!Model.Success)
			{
				<div class="alert-danger text-center">
					@Model.Message
				</div>
			}
			<div class="row">
				<div class="col-sm-4">
					Bank Account
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<input type="text" asp-for="Bank.AccNo" class="form-control" placeholder="Bank Account" />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					Bank Name
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<input type="text" asp-for="Bank.Name" class="form-control" placeholder="Bank Name" />
					</div>
				</div>
			</div>
			@*
				<div class="form-check">
					<input class="form-check-input" type="radio" asp-for="Account.Closed" value="Account.Closed" id="closed">
					<label class="form-check-label" for="closed">
						Closed
					</label>
				</div>*@
		</div>
		<div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
			<button type="submit" class="btn btn-success">SAVE</button>
			<a class="btn btn-secondary" asp-page="./ListBanks">BACK</a>
		</div>
	</div>
</form>
