@page
@model AccountingSystem.Pages.Configuration.ListProductCategoryModel
@{
	var count = 0;
}
<div>
	<div class="modal-header" style="background-color:white;color:white;text-align:center">
		<a class="nav-link text-dark" asp-page="./EditProductCategory">CREATE</a>
	</div>
	<div class="table-responsive">
		@if (!Model.Success)
		{
			<div class="alert-danger text-center">
				@Model.Message
			</div>
		}
		<table class="table table-sm table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Parent Category</th>
					<th scope="col">Income GL Account</th>
					<th scope="col">Expense GL Account</th>
					<th scope="col">Personnel</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model.ProductCategories)
				{
					count++;
					<tr>
						<th scope="row">@count</th>
						<td>@category.Name</td>
						<td>@category.ParentCategory</td>
						<td>@category.IncomeGlAccount</td>
						<td>@category.ExpenseGlAccount</td>
						<td>@category.Personnel</td>
						<td class="text-right">
							<div class="dropdown">
								<a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fas fa-ellipsis-v"></i>
								</a>
								<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
									<form asp-page-handler="edit" method="post">
										<button class="btn btn-default">Edit</button>
										<input type="hidden" name="id" value="@category.Id" />
									</form>
									<form asp-page-handler="delete" method="post">
										<button class="btn btn-default">Delete</button>
										<input type="hidden" name="id" value="@category.Id" />
									</form>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
