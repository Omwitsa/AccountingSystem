@page
@model AccountingSystem.Pages.Configuration.EditJournalModel
@{
}
<form method="post">
	<div class="modal-content hold-transition login-page">
		<div class="modal-header" ;color:white;text-align:center">
			<h5 class="modal-title w-100 text-center">Journal</h5>
		</div>
		<div class="modal-body">
			@if (!Model.Success)
			{
				<div class="alert-danger text-center">
					@Model.Message
				</div>
			}
			<div class="row">
				<div class="col-sm-4">
					Name
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<input type="text" asp-for="Journal.Name" class="form-control" placeholder="Name" />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					Type
				</div>
				<div class="col-sm-8">
					<div class="form-group">
						<select class="form-control" asp-for="Journal.Type">
							<option selected>Select type</option>
							@foreach (var type in Model.JournalTypes)
							{
								<option value="@type">@type</option>
							}
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer" style="background-color:#467fd0;color:white;text-align:center">
			<button type="submit" class="btn btn-success">SAVE</button>
			<a class="btn btn-secondary" asp-page="./ListJournals">BACK</a>
		</div>
	</div>
</form>
