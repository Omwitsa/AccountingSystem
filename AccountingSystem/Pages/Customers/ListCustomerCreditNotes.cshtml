@page
@model AccountingSystem.Pages.Customers.ListCustomerCreditNotesModel
@{
    var count = 0;
}
<div>
    <div class="modal-header" style="background-color:white;color:white;text-align:center">
         <a class="btn btn-info" asp-page="./EditCustomerCreditNotes">CREATE</a>
    </div>
    <div class="table-responsive">
		<table class="table table-sm table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Ref</th>
					<th scope="col">Customer</th>
					<th scope="col">Invoice Date</th>
					<th scope="col">Due Date</th>
					<th scope="col">Net Amount</th>
					<th scope="col">Tax</th>
					<th scope="col">Total Amount</th>
					<th scope="col">Status</th>
					<th scope="col">Personnel</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var creditNote in Model.CreditNotes)
				{
					count++;
					<tr>
						<th scope="row">@count</th>
						<td>@creditNote.Ref</td>
						<td>@creditNote.Customer</td>
						<td>@creditNote.InvoiceDate</td>
						<td>@creditNote.DueDate</td>
						<td>@creditNote.NetAmount</td>
						<td>@creditNote.Tax</td>
						<td>@creditNote.TotalAmount</td>
						<td>@creditNote.Status</td>
						<td>@creditNote.Personnel</td>
						<td class="text-right">
							<div class="dropdown">
								<a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fas fa-ellipsis-v"></i>
								</a>
								<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
									<form asp-page-handler="edit" method="post">
										<button class="btn btn-default">View</button>
										<input type="hidden" name="id" value="@creditNote.Id" />
									</form>
								</div>
							</div>
						</td>
					</tr>
				}
				</tbody>
			</table>
    </div>
</div>