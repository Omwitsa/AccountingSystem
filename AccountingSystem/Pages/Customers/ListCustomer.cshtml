@page
@model AccountingSystem.Pages.Customers.ListCustomerModel
@{
    var count = 0;
}

<div>
    <div class="modal-header" style="background-color:white;color:white;text-align:center">
        <a class="nav-link text-dark" asp-page="./EditCustomer">CREATE</a>
    </div>
    <div class="table-responsive">
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col">Email</th>
                    <th scope="col">PhoneNo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vender in Model.Customers)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@vender.Name</td>
                        <td>@vender.City</td>
                        <td>@vender.Country</td>
                        <td>@vender.Email</td>
                        <td>@vender.PhoneNo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>