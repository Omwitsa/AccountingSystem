                            <div class="dropdown" aria-labelledby="navbarDropdown">
                                <ul class="dropdown-menu flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="@url/Pages/Report.aspx?ItemPath=%2fReports%2fProfitLossReport" target="_blank">Profit and Loss</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="@url/Pages/Report.aspx?ItemPath=%2fReports%2fBalanceSheet" target="_blank">Balance Sheet</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="@url/Pages/Report.aspx?ItemPath=%2fReports%2fExecutiveSummery" target="_blank">Executive Summary</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="@url/Pages/Report.aspx?ItemPath=%2fReports%2fCashStatement" target="_blank">Cash Flow Statement</a>
                                    </li>
