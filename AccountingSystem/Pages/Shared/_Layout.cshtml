                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Customers/ListCustomerInvoice">Invoices</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Customers/ListCustomerCreditNotes">Credit Notes</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Customers/ListCustomerPayments">Payments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Customers/ListCustomerProducts">Products</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Customers/ListCustomer">Customers</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false" style="color:white;">
                                Vendors
                            </a>
                            <div class="dropdown" aria-labelledby="navbarDropdown">
                                <ul class="dropdown-menu flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Vendors/bill/ListBill">Bills</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Vendors/refund/ListRefunds">Refunds</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Vendors/ListPayment">Payments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Vendors/product/ListProduct">Products</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Vendors/vendor/ListVendors">Vendors</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false" style="color:white;">
                                Accounting
                            </a>
                            <div class="dropdown" aria-labelledby="navbarDropdown">
                                <ul class="dropdown-menu flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Accounting/ListAssets">Assets</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Accounting/ListAutoTransfers">Auto Transfers</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-page="/Accounting/ListDefferredExpenses">Defferred Expenses</a>
